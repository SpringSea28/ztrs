<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>


    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="183dp"
        android:orientation="vertical"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/primary_background_color_blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="8sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="9dp"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/guanbi_one"
                android:scaleType="center"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_input_secret_prompt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:text="请输入密码:"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edt_input_secret"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:text="1234"
                android:gravity="center"
                android:inputType="textPassword"
                android:layout_toRightOf="@id/tv_input_secret_prompt"
                android:background="@drawable/setting_edittext_bg"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_save"
            style="@style/setting_save_btn_style"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="确定"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    </LinearLayout>
</layout>
