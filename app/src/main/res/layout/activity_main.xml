<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="80dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/logo"/>
        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:background="@drawable/main_item_text_bg_selector">
            <TextView
                style="@style/tower_primary_title_text_style"
                android:drawableLeft="@mipmap/shezhi"
                android:drawablePadding="2dp"
                android:text="设置"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_identity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/rl_setting"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:background="@drawable/main_item_text_bg_selector">
            <TextView
                style="@style/tower_primary_title_text_style"
                android:drawableLeft="@mipmap/shenfencaiji"
                android:drawablePadding="2dp"
                android:text="身份采集"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_output"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/rl_identity"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:background="@drawable/main_item_text_bg_selector">
            <TextView
                style="@style/tower_primary_title_text_style"
                android:drawableLeft="@mipmap/shuchukongzhi"
                android:drawablePadding="2dp"
                android:text="输出控制"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_announcement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/rl_output"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:background="@drawable/main_item_text_bg_selector">
            <TextView
                style="@style/tower_primary_title_text_style"
                android:drawableLeft="@mipmap/gonggao"
                android:drawablePadding="2dp"
                android:text="公告"/>
            <ImageView
                android:id="@+id/img_announcement_unread"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/announcement_unread_bg"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_signal_3"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_toLeftOf="@id/rl_announcement"
            android:layout_marginRight="19dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/xinhao_3"/>
        <ImageView
            android:id="@+id/img_signal_1"
            android:layout_width="10dp"
            android:layout_height="8dp"
            android:layout_toLeftOf="@id/img_signal_3"
            android:layout_marginRight="7dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/xinhao_1"/>

        <TextClock
            android:id="@+id/tv_time"
            style="@style/tower_primary_text_style"
            android:layout_toLeftOf="@id/img_signal_1"
            android:layout_toRightOf="@id/img_logo"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:format24Hour="yyyy年MM月dd日 HH:mm:ss EEEE"
            android:textColor="#475771"/>

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_header"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/logo_2"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp">
            <TextView
                android:id="@+id/tv_name"
                style="@style/tower_primary_text_style"
                android:textColor="#475771"
                android:text="安晓迪"/>
            <TextView
                android:id="@+id/tv_start_work_time"
                style="@style/tower_primary_text_style"
                android:layout_below="@id/tv_name"
                android:textColor="#475771"
                android:text="18.11.05 14:16:12"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_work_time"
                style="@style/tower_primary_text_style"
                android:textColor="#475771"
                android:text="累计上班时间：30:26:28"/>
            <TextView
                android:id="@+id/tv_pay"
                style="@style/tower_primary_text_style"
                android:layout_below="@id/tv_work_time"
                android:textColor="#475771"
                android:text="本月收入: 3000元"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_attendance_onwork"
            style="@style/tower_attendance_text_style"
            android:layout_marginEnd="5dp"
            android:text="上班"/>
        <TextView
            android:id="@+id/tv_attendance_offwork"
            style="@style/tower_attendance_text_style"
            android:layout_marginStart="5dp"
            android:text="下班"/>
        <TextView
            android:id="@+id/tv_attendance_workhistory"
            style="@style/tower_attendance_text_style"
            android:layout_width="49dp"
            android:layout_marginStart="5dp"
            android:text="考勤记录"/>
        
        <TextView
            android:id="@+id/tv_emergency_call"
            android:layout_width="49dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:textSize="7sp"
            android:textColor="@android:color/white"
            android:background="#FD3C01"
            android:text="紧急呼叫"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <org.videolan.libvlc.util.VLCVideoLayout
            android:id="@+id/video_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="false" />

        <RelativeLayout
            android:id="@+id/rl_video_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/pic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_v1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="7sp"
                android:background="#4AA5FE"
                android:textColor="#FED456"
                android:text="吊钩可视化"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/tv_v2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="7sp"
                android:background="#B24AA5FE"
                android:textColor="#FFFFFF"
                android:text="排绳监控视频"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/tv_v3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="7sp"
                android:background="#B24AA5FE"
                android:textColor="#FFFFFF"
                android:text="驾驶室监控视频"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_video"
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:background="#7f000000">
            <Button
                android:id="@+id/btn_play"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:stateListAnimator="@null"
                android:textColor="@android:color/white"
                android:background="@drawable/setting_save_btn_bg_selector"
                android:textSize="7sp"
                android:text="播放"/>

            <ImageView
                android:id="@+id/img_full_screen"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/quanping"
                android:scaleType="center"/>

            <ImageView
                android:id="@+id/img_volume"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/yinliang"
                android:scaleType="center"/>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_tower_parameter"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@color/white"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_upload_converter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@drawable/tower_parameter_converter_text_color_selector"
            android:background="@drawable/tower_parameter_converter_text_bg_selector"
            android:text="起升变频器"/>
        <TextView
            android:id="@+id/tv_luffing_converter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@drawable/tower_parameter_converter_text_color_selector"
            android:background="@drawable/tower_parameter_converter_text_bg_selector"
            android:text="变幅变频器"/>
        <TextView
            android:id="@+id/tv_around_converter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@drawable/tower_parameter_converter_text_color_selector"
            android:background="@drawable/tower_parameter_converter_text_bg_selector"
            android:text="回转变频器"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tower_line_color"/>

    <FrameLayout
        android:id="@+id/fl_frequency_converter"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@color/white">

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:background="#4AA5FE"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:layout_marginEnd="7dp"
                android:gravity="center"
                android:background="@mipmap/anniu"
                android:textSize="7sp"
                android:textColor="@android:color/white"
                android:text="一键报修"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:layout_marginEnd="7dp"
                android:gravity="center"
                android:background="@mipmap/anniu"
                android:textSize="7sp"
                android:textColor="@android:color/white"
                android:text="检查维保"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:layout_marginEnd="7dp"
                android:gravity="center"
                android:background="@mipmap/anniu"
                android:textSize="7sp"
                android:textColor="@android:color/white"
                android:text="安全教育"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:layout_marginEnd="7dp"
                android:gravity="center"
                android:background="@mipmap/anniu"
                android:textSize="7sp"
                android:textColor="@android:color/white"
                android:text="劳务结算"/>

            <TextView
                android:id="@+id/tv_tower_market"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@mipmap/anniu"
                android:textSize="7sp"
                android:textColor="@android:color/white"
                android:text="建机商城"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>