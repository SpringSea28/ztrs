<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg_color"
    android:orientation="vertical">
    <include
        android:id="@+id/rl_title"
        layout="@layout/title_bar_item"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:background="#0784FF"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/setting_content_text_dimen"
        android:text="倾角X标定（与大臂平行方向） ）"/>
    <RelativeLayout
        style="@style/setting_item_style">
        <TextView
            style="@style/setting_item_key_text_style"
            android:text="当前编码值"/>
        <TextView
            android:id="@+id/tv_cur_coded_value"
            style="@style/setting_item_value_text_style"
            android:text=""/>
    </RelativeLayout>
    <View
        style="@style/setting_item_divide_line_style"
        />
    <RelativeLayout
        style="@style/setting_item_style">
        <TextView
            style="@style/setting_item_key_text_style"
            android:text="当前测量值"/>
        <TextView
            android:id="@+id/tv_cur_measure_value"
            style="@style/setting_item_value_text_style"
            android:text=""/>
        <TextView
            android:id="@+id/tv_cur_measure_value_unit"
            style="@style/setting_item_value_unit_text_style"
            android:text="度"/>
    </RelativeLayout>
    <View
        style="@style/setting_item_divide_line_style"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="12dp"
        android:textColor="#111D29"
        android:textSize="@dimen/setting_content_text_dimen"
        android:text="角度预警、报警设置"/>
    <RelativeLayout
        style="@style/setting_item_style">
        <TextView
            style="@style/setting_item_key_text_style"
            android:text="预警值"/>
        <EditText
            android:id="@+id/tv_high_warn_value"
            style="@style/setting_item_edit_text_float_style"
            android:layout_alignParentEnd="true"
            android:text=""/>
        <TextView
            android:id="@+id/tv_high_warn_value_unit"
            style="@style/setting_item_value_unit_text_style"
            android:text="度"/>
    </RelativeLayout>
    <View
        style="@style/setting_item_divide_line_style"
        />
    <RelativeLayout
        style="@style/setting_item_style">
        <TextView
            style="@style/setting_item_key_text_style"
            android:text="报警值"/>
        <EditText
            android:id="@+id/tv_high_alarm_value"
            style="@style/setting_item_edit_text_float_style"
            android:layout_alignParentEnd="true"
            android:text=""/>
        <TextView
            android:id="@+id/tv_high_alarm_value_unit"
            style="@style/setting_item_value_unit_text_style"
            android:text="度"/>
    </RelativeLayout>
    <View
        style="@style/setting_item_divide_line_style"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:background="#0784FF"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/setting_content_text_dimen"
        android:text="倾角Y标定（与大臂垂直方向） ）"/>
    <RelativeLayout
        style="@style/setting_item_style">
        <TextView
            style="@style/setting_item_key_text_style"
            android:text="当前编码值"/>
        <TextView
            android:id="@+id/tv_cur_coded_value_y"
            style="@style/setting_item_value_text_style"
            android:text=""/>
    </RelativeLayout>
    <View
        style="@style/setting_item_divide_line_style"
        />
    <RelativeLayout
        style="@style/setting_item_style">
        <TextView
            style="@style/setting_item_key_text_style"
            android:text="当前测量值"/>
        <TextView
            android:id="@+id/tv_cur_measure_value_y"
            style="@style/setting_item_value_text_style"
            android:text=""/>
        <TextView
            android:id="@+id/tv_cur_measure_value_unit_y"
            style="@style/setting_item_value_unit_text_style"
            android:text="度"/>
    </RelativeLayout>
    <View
        style="@style/setting_item_divide_line_style"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="12dp"
        android:textColor="#111D29"
        android:textSize="@dimen/setting_content_text_dimen"
        android:text="角度预警、报警设置"/>
    <RelativeLayout
        style="@style/setting_item_style">
        <TextView
            style="@style/setting_item_key_text_style"
            android:text="预警值"/>
        <EditText
            android:id="@+id/tv_high_warn_value_y"
            style="@style/setting_item_edit_text_float_style"
            android:layout_alignParentEnd="true"
            android:text=""/>
        <TextView
            android:id="@+id/tv_high_warn_value_unit_y"
            style="@style/setting_item_value_unit_text_style"
            android:text="度"/>
    </RelativeLayout>
    <View
        style="@style/setting_item_divide_line_style"
        />
    <RelativeLayout
        style="@style/setting_item_style">
        <TextView
            style="@style/setting_item_key_text_style"
            android:text="报警值"/>
        <EditText
            android:id="@+id/tv_high_alarm_value_y"
            style="@style/setting_item_edit_text_float_style"
            android:layout_alignParentEnd="true"
            android:text=""/>
        <TextView
            android:id="@+id/tv_high_alarm_value_unit_y"
            style="@style/setting_item_value_unit_text_style"
            android:text="度"/>
    </RelativeLayout>
    <View
        style="@style/setting_item_divide_line_style"
        />

    <Button
        android:id="@+id/btn_save"
        style="@style/setting_save_btn_style"/>
</LinearLayout>