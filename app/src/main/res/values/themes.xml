<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->

        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>
<!--        <item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>
<!--        <item name="android:fitsSystemWindows">true</item>-->
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <style name="tower_primary_text_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tower_primary_text_color</item>
        <item name="android:textSize">@dimen/tower_primary_text_dimen</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="tower_primary_title_text_style" parent="tower_primary_text_style" >
        <item name="android:textColor">@color/tower_primary_normal_text_color_blue</item>
        <item name="android:textSize">6sp</item>
    </style>

    <style name="tower_attendance_text_style" >
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textColor">#0182FF</item>
        <item name="android:textSize">7sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/tower_attendance_btn_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tower_converter_text_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tower_primary_text_color</item>
        <item name="android:textSize">@dimen/tower_converter_text_dimen</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="setting_item_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>
    <style name="setting_item_text_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/tower_primary_text_color</item>
        <item name="android:textSize">7sp</item>
    </style>

    <style name="setting_item_key_text_style" parent="setting_item_text_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingStart">@dimen/setting_item_key_padding_start</item>
    </style>

    <style name="setting_item_unit_style" parent="setting_item_text_style">
        <item name="android:paddingStart">@dimen/setting_item_unit_padding_start</item>
        <item name="android:paddingEnd">@dimen/setting_item_unit_padding_end</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="setting_item_edit_text_base_style">
        <item name="android:layout_width">@dimen/setting_item_value_width</item>
        <item name="android:layout_height">@dimen/setting_item_value_height</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">34dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/setting_edittext_bg</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">8</item>
        <item name="android:textColorHint">@android:color/holo_red_light</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="setting_item_edit_text_style" parent="setting_item_edit_text_base_style">
        <item name="android:digits">0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
    </style>
    <style name="setting_item_edit_text_float_style" parent="setting_item_edit_text_base_style">
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>
    <style name="setting_item_edit_byte_style" parent="setting_item_edit_text_base_style">
        <item name="android:inputType">number</item>
        <item name="android:numeric">integer</item>
        <item name="android:max">255</item>
        <item name="android:maxLength">3</item>
    </style>
    <style name="setting_item_edit_int_style" parent="setting_item_edit_text_base_style">
        <item name="android:inputType">number</item>
        <item name="android:numeric">integer</item>
        <item name="android:maxLength">10</item>
    </style>
    <style name="setting_item_value_text_style" parent="setting_item_edit_text_base_style">
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="setting_item_value_unit_text_style" parent="setting_item_unit_style">
    </style>

    <style name="setting_item_divide_line_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:src">@android:color/black</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="setting_save_btn_style" >
        <item name="android:layout_width">329dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/setting_save_btn_bg_selector</item>
        <item name="android:textSize">7sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:text">保存</item>
    </style>

    <style name="setting_current_value_tv_style">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#0784FF</item>
        <item name="android:textSize">7sp</item>
        <item name="android:text">当前值</item>
    </style>

    <style name="converter_limit_value_img_style">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/tower_converter_normal_bg</item>
    </style>


    <style name="dialog_style" parent="Theme.AppCompat.Light.Dialog">
        <!--是否悬浮在activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--透明是否-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@null</item>
        <!--设置没有窗口标题、dialog标题等各种标题-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:title">@null</item>
        <item name="android:dialogTitle">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>


</resources>